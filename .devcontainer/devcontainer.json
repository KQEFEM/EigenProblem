{
  "name": "FEniCS Development Container",
  "build": {
    "dockerfile": "../docker/dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/opt/app",
  "mounts": [
    "source=${localWorkspaceFolder},target=/opt/app,type=bind,consistency=cached"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "remote.extensionKind": {
      "ms-python.python": "ui",
      "ms-vscode.cpptools": "ui",
      "ms-toolsai.jupyter": "ui"
    }
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode.cpptools",
    "ms-toolsai.jupyter"
  ],
"postCreateCommand": [
  "/bin/bash", "-c", "source /opt/conda/etc/profile.d/conda.sh && conda activate fenics"
],
  "remoteUser": "myuser"
}