{
  "name": "FEniCS Container",
  "build": {
    "dockerfile": "../docker/Dockerfile",  // Adjusted the path to the Dockerfile
    "context": "..",
    "args": {}
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode.cpptools",
    "ms-toolsai.jupyter"
  ],
"postCreateCommand": "echo 'Debug: Start' && mamba activate fenics && echo 'Debug: End'"
  "remoteUser": "root",
  "mounts": [
    "source=${localWorkspaceFolder}/,target=/opt/app,type=bind"
  ]
}
