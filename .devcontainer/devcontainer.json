{
  "name": "FEniCS Development Container",
  "build": {
    "dockerfile": "../docker/dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.shell.osx": "/bin/bash",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",
    "remote.extensionKind": {
      "ms-python.python": "ui",
      "ms-vscode.cpptools": "ui",
      "ms-toolsai.jupyter": "ui"
    },
    "remote.userDataDir": "/root/.vscode-server"
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode.cpptools",
    "ms-toolsai.jupyter"
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/opt/app,type=bind"
  ],
  "postCreateCommand": [
    "echo 'To activate the FEniCS environment, run: conda activate fenics'",
    "source /opt/conda/etc/profile.d/conda.sh",
    "conda activate fenics"
  ]
}
