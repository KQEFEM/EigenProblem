{
  "name": "FEniCS Development Container",
  "build": {
    "dockerfile": "../docker/dockerfile",
    "context": ".."
  },
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "remote.extensionKind": {
      "ms-python.python": "ui",
      "ms-vscode.cpptools": "ui",
      "ms-toolsai.jupyter": "ui"
    },
    "remote.userDataDir": "/root/.vscode-server"
  },
  "extensions": [
    "ms-python.python",
    "ms-vscode.cpptools",
    "ms-toolsai.jupyter"
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/opt/app,type=bind",
    "source=${localEnv:HOME}/.vscode/extensions,target=/root/.vscode-server/extensions,type=bind"
  ],
  "postCreateCommand": "echo 'Debug: Start' && echo '' && echo 'To activate the FEniCS environment, run: conda activate fenics' && echo '' && echo 'Debug: End'"
}