FROM condaforge/mambaforge:latest

ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libblas-dev \
    liblapack-dev \
    libopenblas-dev \
    libmpich-dev \
    gfortran \
    wget \
    unzip \
    build-essential \
    && apt-get clean

# Create a non-root user
RUN useradd -m -s /bin/bash myuser

# Switch to non-root user before environment setup
USER myuser

# Set working directory
WORKDIR /opt/app

# Create the fenics environment
RUN mamba create -n fenics python=3.9 fenics-dolfinx mpich && mamba clean -a -y

# Copy requirements and install dependencies
COPY --chown=myuser:myuser requirements.txt /opt/app/requirements.txt
RUN mamba install --yes --file /opt/app/requirements.txt -n fenics

# Copy the rest of the application
COPY --chown=myuser:myuser . /opt/app/

# Set the default command
CMD ["bash", "-c", "source /opt/conda/etc/profile.d/conda.sh && conda activate fenics && exec /bin/bash"]
